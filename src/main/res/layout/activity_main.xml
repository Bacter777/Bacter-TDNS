<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:fitsSystemWindows="true"
                android:layout_marginTop="20dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:padding="16dp">
                <Spinner
                    android:id="@+id/spinner"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:textAlignment="center"
                    android:background="@drawable/button"
                    android:foreground="?selectableItemBackground"
                    android:textAllCaps="false"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/gotham"
                    android:textColor="@color/white"
                    android:layout_marginTop="2dp"
                    android:text="Google DNS"/>
                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/gotham"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="6dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="2dp"
                    android:text="Bacter DNS"/>
                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="6dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham"
                    android:layout_marginTop="2dp"
                    android:text="Open DNS"/>
                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="ipV6"
                    android:fontFamily="@font/gotham"
                    android:thumbTint="@color/colorButtonBackground"
                    android:textColor="@color/white"
                    android:layout_marginStart="5dp"/>
                <EditText
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/gotham"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:width="300dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Enter DNSv4"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"/>
                <EditText
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/gotham"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:width="300dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Enter second DNSv4"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"/>
                <EditText
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/gotham"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:width="300dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Enter DNSv4"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"/>
                <EditText
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/gotham"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:width="300dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:hint="Enter second DNSv6"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="4dp"
                    android:fontFamily="@font/gotham"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/transparent"
                    android:text="Available DNS Services"/>
                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/gotham"
                    android:layout_marginTop="2dp"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/transparent"
                    android:text="Finding Latency"/>
                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/gotham"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/transparent"
                    android:text="Finding Latency"/>
                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/gotham"
                    android:textColor="@android:color/transparent"
                    android:gravity="center_horizontal"
                    android:text="Finding Latency"/>
                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:background="@drawable/button"
                    android:text="Connect"/>
                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/gotham"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="Disconnect"
                    android:textColor="@color/white"
                    android:background="@drawable/button"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:weightSum="1">
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="74dp"
                        android:layout_height="57dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="7dp"
                        app:srcCompat="@drawable/ic_wififalse" />
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="NOT CONNECTED"
                        android:fontFamily="@font/gotham"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="40dp"
                        android:textSize="18sp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/gotham"
                    android:textColor="@color/white"
                    android:background="@drawable/button"
                    android:text="Connect fastest server" />
                <Button
                    android:id="@+id/button8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gotham"
                    android:background="@drawable/button"
                    android:layout_gravity="center_horizontal"
                    android:text="Latency of Available Servers" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>